  "routes": [
    {
      "src": "/api/test",
      "dest": "/api/test.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/[...all].js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "dist/public/assets/$1"
    },
    {
      "src": "/PO_Excel_Template\\.xlsx",
      "dest": "dist/public/PO_Excel_Template.xlsx",
      "headers": {
        "Content-Type": "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
        "Content-Disposition": "attachment; filename=\"PO_Excel_Template.xlsx\""
      }
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|svg|ico|woff|woff2|xlsx|json))",
      "dest": "dist/public/$1"
    },
    {
      "src": "/(create-order/simple|create-order/.*|orders.*|vendors.*|items.*|projects.*|dashboard.*|admin.*|users.*|profile.*|reports.*|.*)",
      "dest": "dist/public/index.html"
    }
  ],
  "functions": {
    "api/[...all].js": {
      "maxDuration": 60
    }
  },
