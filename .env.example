# Database Configuration
# Choose one: Traditional PostgreSQL OR Supabase

# Option 1: Traditional PostgreSQL (existing)
DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Supabase (new - recommended)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_PASSWORD=your-database-password

# Application Configuration
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Email Configuration (for user registration and password reset)
SMTP_HOST=smtp.naver.com
SMTP_PORT=587
SMTP_USER=your-email@naver.com
SMTP_PASS=your-app-password
SMTP_FROM_EMAIL=noreply@ikjin.co.kr

# Feature Flags
VITE_ENVIRONMENT=development
VITE_ENABLE_EXCEL_UPLOAD=true

# Security
SESSION_SECRET=your-session-secret-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads